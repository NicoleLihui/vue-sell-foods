html, body
    height: 100%
    overflow: hidden
    font-weight: 200
    line-height: 1
    font-style: 'pingFang SC','STHeitiSC-Light','Helvetica-Light',Arial,sans-serif
i
  font-style: normal

.clearfix
  display: inline-block
  &:after
    display: block
    content: ""
    height: 0
    line-height: 0
    clear: both
    visibility: hidden

@media(-web-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5)
    .border-1px
      &::after
          -webkit-transform: scaleY(.7)
          transform: scaleY(.7)
@media(-web-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
    .border-1px
      &::after
          -webkit-transform: scaleY(.5)
          transform: scaleY(.5)